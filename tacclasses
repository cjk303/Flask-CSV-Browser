<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{% block title %}TacAdmin{% endblock %}</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <nav class="bg-white shadow p-4 flex justify-between items-center">
    <a href="{{ url_for('index') }}" class="font-bold text-xl text-blue-600">TacAdmin</a>
    <div>
      {% if current_user.is_authenticated %}
        <span class="mr-4 text-gray-700">Logged in as {{ current_user.id }}</span>
        <a href="{{ url_for('logout') }}" class="text-blue-600 hover:underline">Logout</a>
      {% else %}
        <a href="{{ url_for('login') }}" class="text-blue-600 hover:underline">Login</a>
      {% endif %}
    </div>
  </nav>

  <main class="flex-grow max-w-5xl mx-auto p-6 bg-white shadow rounded mt-6 mb-6">
    {% with messages = get_flashed_messages(with_categories=true) %}
      {% if messages %}
        <div class="mb-4">
          {% for category, message in messages %}
            <div class="p-3 mb-2 rounded {{ 'bg-green-200 text-green-800' if category == 'success' else 'bg-red-200 text-red-800' if category == 'error' else 'bg-blue-200 text-blue-800' }}">
              {{ message }}
            </div>
          {% endfor %}
        </div>
      {% endif %}
    {% endwith %}
    {% block content %}{% endblock %}
  </main>

  <footer class="bg-white text-center p-4 shadow-inner text-sm text-gray-500">
    &copy; 2025 TacAdmin
  </footer>
</body>
</html>
