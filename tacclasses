{% extends "layout.html" %}
{% block title %}Dashboard{% endblock %}

{% block content %}
<h1 class="text-3xl font-bold mb-4">Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">

  <div class="p-4 border rounded shadow">
    <h2 class="text-xl font-semibold mb-2">TACACS+ Service</h2>
    <p>Status: 
      {% if service_status == 'active' %}
        <span class="text-green-600 font-bold">Running</span>
      {% elif service_status == 'inactive' %}
        <span class="text-red-600 font-bold">Stopped</span>
      {% else %}
        <span class="text-gray-600 font-bold">Unknown</span>
      {% endif %}
    </p>
  </div>

  <div class="p-4 border rounded shadow">
    <h2 class="text-xl font-semibold mb-2">Config Validation</h2>
    {% if config_valid %}
      <p class="text-green-600 font-bold">Config is valid</p>
    {% else %}
      <p class="text-red-600 font-bold">Config is invalid</p>
      {% if validation_output %}
        <pre class="bg-gray-100 p-2 rounded mt-2 text-sm">{{ validation_output }}</pre>
      {% endif %}
    {% endif %}
  </div>

  <div class="p-4 border rounded shadow">
    <h2 class="text-xl font-semibold mb-2">Backups</h2>
    <p>{{ backup_count }} backups available</p>
    <a href="{{ url_for('view_backups') }}" class="text-blue-600 hover:underline">View Backups</a>
  </div>

</div>

<div class="mt-8">
  <a href="{{ url_for('edit_tacacs') }}" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Edit TACACS+ Config</a>
</div>
{% endblock %}
